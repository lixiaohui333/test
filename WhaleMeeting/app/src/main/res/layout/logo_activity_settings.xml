<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <include layout="@layout/include_title"
             android:layout_width="match_parent"
             android:layout_height="47dp"
             android:background="@color/colorPrimaryDark"
        />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="开启手动确认签到成功"
            android:textSize="14sp"
            android:textColor="@color/color_text_333"
            />

        <Switch
            android:id="@+id/sw_suresign"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"

        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="签到成功后自动打印凭条"
            android:textSize="14sp"
            android:textColor="@color/color_text_333"
            />

        <Switch
            android:id="@+id/sw_signprint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            />


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"

        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="签到成时开启收集人像"
            android:textSize="14sp"
            android:textColor="@color/color_text_333"
            />

        <Switch
            android:id="@+id/sw_collectphoto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            />


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"

        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="人像签到成功后自动更新参会人头像"
            android:textSize="14sp"
            android:textColor="@color/color_text_333"
            />

        <Switch
            android:id="@+id/sw_updatephoto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            />


    </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/color_text_999"
        android:text="*开启自动更新参会人头像后,不会再进行手工人像采集"
        />



    <TextView
        android:id="@+id/tv_login_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_login_logout_cir"
        android:elevation="2dp"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        />


</LinearLayout>
